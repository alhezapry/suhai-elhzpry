                `origin=*&` +
                `action=query&` +
                `list=search&` +
                `srsearch=${encodeURIComponent(query)}&` +
                `srlimit=${limit}&` +
                `format=json`;
            
            if (type === 'images') {
                url += `&srnamespace=6`;
            }
            
            const response = await fetch(url);
            return response.json();
        }
        
