        async function searchImages(query) {
            const url = `https://${currentLanguage}.wikipedia.org/w/api.php?` +
                `origin=*&` +
                `action=query&` +
                `generator=search&` +
                `gsrsearch=${encodeURIComponent(query)}&` +
                `gsrnamespace=6&` + // namespace Ù„Ù„ØµÙˆØ±
                `prop=imageinfo&` +
                `iiprop=url&` +
                `format=json`;
            
            try {
                const response = await fetch(url);
                const data = await response.json();
                return data.query ? Object.values(data.query.pages) : [];
            } catch (error) {
                return [];
            }
        }
        
