            return {
                title: page.title,
                extract: page.extract,
                url: page.fullurl,
                pageId: page.pageid,
                thumbnail: page.thumbnail?.source || null,
                wordcount: page.wordcount || 0,
                lastModified: page.touched || ''
            };
        }
        
